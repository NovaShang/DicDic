<Window x:Class="DicDic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Foreground="White"
        WindowStyle="None" 
        ResizeMode="NoResize"
        Topmost="True"
        Height="100"
        Width="400">
    <Border VerticalAlignment="Stretch"  
            Background="#FF1F1F1F" 
            BorderThickness="1" 
            BorderBrush="#FF444444">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="48"/>
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="1">
                <TextBlock DockPanel.Dock="Left"
                           ToolTip="DicDic by Nova"
                           Text="&#xE82D;" 
                           Margin="10,0,3,0"
                           Style="{DynamicResource FontIconSmall}" />
                <StackPanel DockPanel.Dock="Right"
                            Orientation="Horizontal">
                    <Button Style="{DynamicResource FlatButtonStyle}"
                            ToolTip="查词 (Enter)"
                            Padding="10">
                        <TextBlock Text="&#xE164;" 
                                   Style="{DynamicResource FontIconSmall}" />
                    </Button>
                    <Button Style="{DynamicResource FlatButtonStyle}"
                            ToolTip="在线搜索 (Ctrl + Enter)"
                            Padding="10">
                        <TextBlock Text="&#xE774;" 
                                   Style="{DynamicResource FontIconSmall}" />
                    </Button>
                </StackPanel>
                <TextBox Style="{DynamicResource TextBoxStyle}" />
            </DockPanel>

            <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal">
                <StackPanel VerticalAlignment="Center" Opacity="0.6" Margin="10,0">
                    <TextBlock HorizontalAlignment="Right" Text="Enter 查词"/>
                    <TextBlock HorizontalAlignment="Right" Text="Ctrl+Enter 搜索"/>
                </StackPanel>
                <Button Style="{DynamicResource FlatButtonStyle}"
                        Visibility="Collapsed"
                        Padding="10">
                    <TextBlock FontFamily="Segoe MDL2 Assets" 
                               Text="&#xE10A;" 
                               Style="{DynamicResource FontIconSmall}" />
                </Button>

            </StackPanel>
        </Grid>
    </Border>
</Window>
